# Include the Make.include file one level up in the directory hierarchy.
include $(dir $(abspath $(lastword $(MAKEFILE_LIST))))/../Make.include

CFLAGS  += -fPIC
LDFLAGS += -lLLVM -Wl,--no-undefined

# Rules and targets
